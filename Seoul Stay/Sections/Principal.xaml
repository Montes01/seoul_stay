<Window x:Class="Seoul_Stay.Sections.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Seoul_Stay.Sections"
        mc:Ignorable="d"
        Title="Principal" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="50" BorderBrush="black"/>
        <TextBlock Text="LOGO" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" >
        </TextBlock>

        <TabControl Grid.Row="1">
            <TabItem Header="I am traveler">
                <UserControl Name="Traveler"/>
            </TabItem>
            <TabItem Header="I am owner/manager">
                <UserControl Name="Owner"/>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
